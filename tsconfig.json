{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@entity/*": [
        "src/core/domain/entity/*"
      ],
      "@mapper/*": [
        "src/core/domain/mapper/*"
      ],
      "@responses/*": [
        "src/core/domain/responses/*"
      ],
      "@dto/*": [
        "src/core/domain/dto/*"
      ],
      "@usecase/*": [
        "src/core/use-case/*"
      ],
      "@repository/*": [
        "src/core/repository/*"
      ],
      "@outbound/*": [
        "src/outbound/*"
      ],
      "@inbound/*": [
        "src/inbound/*"
      ],
      "@connections/*": [
        "src/core/connections/*"
      ],
      "@core/config/*": [
        "src/core/config/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
